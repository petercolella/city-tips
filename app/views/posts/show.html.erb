<div class="jumbotron">
  <h1 class="text-center"><%= @post.title %> <br><small> <%= link_to @post.city.name, city_path(@post.city) %></small></h1>
</div>
<div class="jumbotron">
  <div class="row">
    <div class="col-sm-3">
      <img class="img-responsive img-rounded hidden-xs" src="<%= @user.image_url %>" alt="">
    </div>
    <div class="col-sm-9">
      <p><%= @post.content %> <br>
      <span class="pull-right text-muted">by <%= link_to @user.full_name.blank? ? "Anonymous user" : @user.full_name, user_path(@user) %>, <%= time_ago_in_words(@post.created_at)%> ago.</span>
      </p>
    </div>
  </div>
</div>
