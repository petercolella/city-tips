<div class="row">
  <div class="col-sm-3">
    <img class="img-responsive img-rounded hidden-xs portrait" src="<%= @user.image_url %>" alt="">
  </div>
  <div class="col-sm-9">
    <h1><%= @post.title %> <br>
      <small>by <%= link_to @user.full_name.blank? ? "Anonymous user" : @user.full_name, user_path(@user) %>, <%= time_ago_in_words(@post.created_at)%> ago.</small>
    </h1>
    <p>
      <%= @post.content %> <br>
      <span class="pull-right text-muted"></span>
    </p>
  </div>
</div>
