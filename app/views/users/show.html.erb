<div class="row">
  <div class="col-sm-4">
    <img class="img-responsive img-rounded hidden-xs" src="<%= @user.image_url %>" alt="">
    <h3><%= @user.full_name %></h3>
    <h3>Joined: <%= @user.created_at.strftime("%x") %></h3>
    <h3>Current City: <%= @user.current_city %></h3>
    <%= link_to "Edit Profile", edit_user_path(@user.id), class: "btn btn-warning"%>
  </div>
  <div class="col-sm-8">
    <% @posts.reverse_each do |post| %>
      <div class="post">
        <h2><%= link_to post.title, city_post_path(post.city, post) %></h2>
        <p><%= truncate(post.content, length: 1000) %></p>
        <%= link_to icon('pencil', class: "fa-3x"), edit_city_post_path(post.city, post) %>
        <%= link_to icon('trash-o', class: "fa-3x"), city_post_path(post.city, post), :method => 'delete' %>
      </div>
    <% end %>
  </div>
</div>
